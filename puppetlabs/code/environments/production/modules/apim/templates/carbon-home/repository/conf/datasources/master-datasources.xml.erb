                    <driverClassName><%= @datasource_user_db_driver %></driverClassName>
                    <maxActive><%= @datasource_common_max_active %></maxActive>
                    <maxWait><%= @datasource_common_max_wait %></maxWait>
                    <testOnBorrow><%= @datasource_common_postgres_test_on_borrow %></testOnBorrow>
