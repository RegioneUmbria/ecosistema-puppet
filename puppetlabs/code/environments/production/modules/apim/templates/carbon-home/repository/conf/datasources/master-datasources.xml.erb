        </datasource>
		
		<datasource>
            <name><%= @datasource_gov_db_name %></name>
            <description>The datasource used for governance registry database</description>
            <jndiConfig>
                <name><%= @datasource_gov_db_jndi %></name>
            </jndiConfig>
